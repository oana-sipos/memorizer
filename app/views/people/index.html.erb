<div class="col-sm-4 col-sm-offset-4">
  <h1>People to contact</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Reason</th>
        <th>Channel</th>
        <th>Deadline</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.reason %></td>
          <td><%= person.channel %></td>
          <td><%= person.deadline %></td>
          <td><%= link_to 'Show', person %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= button_to('New Person', new_person_path, class: 'btn btn-large btn-info') %>
</div>